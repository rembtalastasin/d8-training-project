<div class="header-top-area">
    <div class="top-bar">
        <div class="container">
            <div class="row">
                <div class="col-md-7 col-lg-6 col-sm-8">
                    <div class="call-to-action">
                        <p><i class="fa fa-envelope-o"></i>Email: <a href="#">{{ email }}</a></p>
                        <p><i class="fa fa-phone"></i>Telephone: <a href="#">{{ telephone }}</a></p>
                    </div>
                </div>
                <div class="col-md-5 col-lg-6 col-sm-4">
                    <div class="book-table-popup">
                        <a href="{{ cta.url }}">{{ cta.text }}</a>
                    </div>
                    <div class="top-social-bookmark">
                        <ul>
                            {% for link in bookmarks -%}
                                <li><a href="{{ link.url }}"> <i class={{ link.icon_class }}></i></a></li>
                            {%- endfor %}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>    

    <div class="mainmenu-area" id="mainmenu-area">
        <div class="mainmenu-area-bg"></div>
        <nav class="navbar">
            <div class="container">
                <div class="navbar-header">
                    <button class="collapsed navbar-toggle" type="button" data-toggle="collapse" data-target=".bs-example-js-navbar-scrollspy">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a href="{{ home_url }}" class="navbar-brand">{% include '@d8training/image/image.twig' with main_logo_black only %}</a>
                    <a href="{{ home_url }}" class="navbar-brand white">{% include '@d8training/image/image.twig' with main_logo only %}</a>
                </div>
                <div class="collapse navbar-collapse bs-example-js-navbar-scrollspy">

                    {% include '@d8training/search-form/search-form.twig' with search_form only %}
                    
                    <ul id="nav" class="nav navbar-nav cl-effect-11">
                        {%  for item in menu -%}
                            <li class="{{ item.active ? 'active' : '' }}">
                                <a class="{{ item.sub_menu > 'at-drop-down' : '' }}" href={{ item.url }}>
                                    {{ item.text }}
                                    {% if item.sub_menu -%}
                                        <i class="hidden-md hidden-lg fa fa-angle-down"></i>
                                    {%- endif %}
                                </a>
                                {% if item.sub_menu -%}
                                    <ul class="sub-menu">
                                        {% for sub_item in sub_menu -%}
                                            <li class="{{ sub_item.active ? 'active': '' }}"><a href="{{ sub_item.url }}">{{ sub_item.text }}</a></li>
                                        {%- endfor %}
                                    </ul>
                                {%- endif %}
                            </li>
                        {%- endfor %}
                    </ul>
                </div>
            </div>
        </nav>
    </div>
</div>